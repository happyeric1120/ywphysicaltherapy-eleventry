---
layout: layout.njk
---

<!-- Blog Post Header -->
<article class="py-16 bg-gray-900">
  <div class="max-w-4xl mx-auto px-4">
    <!-- Meta Info -->
    <div class="text-center mb-8">
      <div class="flex items-center justify-center text-sm text-gray-400 mb-4">
        <time datetime="{{ date | date('%Y-%m-%d') }}">
          {{ date | date('%B %d, %Y') }}
        </time>
        {% if tags %}
          <span class="mx-2">â€¢</span>
          <div class="flex gap-2">
            {% for tag in tags %}
              {% if tag != "blog" %}
                <span class="bg-teal-600 text-white px-2 py-1 rounded text-xs">{{ tag }}</span>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
      <h1 class="text-3xl md:text-5xl font-bold text-white mb-6">{{ title }}</h1>
      {% if excerpt %}
        <p class="text-lg md:text-xl text-gray-300 max-w-3xl mx-auto">{{ excerpt }}</p>
      {% endif %}
    </div>
  </div>
</article>

<!-- Blog Post Content -->
<article class="py-16 bg-white text-gray-800">
  <div class="max-w-3xl mx-auto px-4">
    <div class="blog-content">
      {{ content | safe }}
    </div>

    <!-- Back to Blog -->
    <div class="mt-12 pt-8 border-t border-gray-300">
      <a href="/blog/" class="inline-flex items-center text-teal-600 hover:text-teal-800 font-semibold">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Blog
      </a>
    </div>
  </div>
</article>